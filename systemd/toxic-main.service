[Unit]
Description=Toxic telegram bot (main worker)
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=20s

[Service]
Type=simple
WorkingDirectory={{ .ProjectDir }}
ExecStart=/bin/sh -c "make run"
Restart=always
StandardOutput=append:{{ .ProjectLogDir }}/main-stdout.log
StandardError=append:{{ .ProjectLogDir }}/main-stderr.log
