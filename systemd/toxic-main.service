[Unit]
Description=Toxic telegram bot (main worker)
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=20s

[Service]
Type=simple
WorkingDirectory={{ project_dir }}
ExecStart=/bin/sh -c "make run"
Restart=always
StandardOutput=append:{{ logs_dir }}/main-stdout.log
StandardError=append:{{ logs_dir }}/main-stderr.log
