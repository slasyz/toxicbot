[Unit]
Description=Toxic telegram bot (main worker)
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=20s

[Service]
Type=simple
WorkingDirectory=${PROJECT_DIR}
ExecStart=/bin/sh -c "make run"
Restart=always
StandardOutput=append:${PROJECT_LOG_DIR}/main-stdout.log
StandardError=append:${PROJECT_LOG_DIR}/main-stderr.log
