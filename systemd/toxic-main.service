[Unit]
Description=Toxic telegram bot (main worker)
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=20s

[Service]
Type=simple
WorkingDirectory=/home/sl/deployments/ToxicTgBot
ExecStart=/bin/sh -c "make run"
Restart=always
StandardOutput=append:/home/sl/logs/ToxicTgBot/stdout.log
StandardError=append:/home/sl/logs/ToxicTgBot/stderr.log
